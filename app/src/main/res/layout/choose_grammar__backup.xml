<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/choose_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="66dp"
        android:layout_marginTop="33dp"
        android:layout_marginBottom="33dp">

        <ImageView
            android:layout_width="88dp"
            android:layout_height="144dp"
            android:background="@drawable/choose_star"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="6dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="语法游戏"
            android:textSize="56dp"
            android:textColor="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="45dp"/>

        <ImageButton
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/choose_cha"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="1080dp"
            android:layout_marginTop="25dp"/>

        <ImageView
            android:id="@+id/cv_iv2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="268dp"
            android:background="@drawable/dew"/>

        <ImageButton
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:id="@+id/cv_ib1"
            android:layout_width="168dp"
            android:layout_height="168dp"
            app:layout_constraintLeft_toLeftOf="@id/cv_iv2"
            app:layout_constraintTop_toTopOf="@id/cv_iv2"
            app:layout_constraintBottom_toBottomOf="@id/cv_iv2"
            app:layout_constraintRight_toRightOf="@id/cv_iv2" />

        <TextView
            android:id="@+id/name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人物"
            android:textColor="#65B1BF"
            android:textSize="40dp"
            app:layout_constraintTop_toBottomOf="@id/cv_iv2"
            app:layout_constraintLeft_toLeftOf="@id/cv_iv2"
            app:layout_constraintRight_toRightOf="@id/cv_iv2"/>

        <ImageView
            android:id="@+id/cv_iv3"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/cv_iv2"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="268dp"
            android:background="@drawable/dew"/>

        <ImageButton
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:id="@+id/cv_ib2"
            android:layout_width="168dp"
            android:layout_height="168dp"
            app:layout_constraintLeft_toLeftOf="@id/cv_iv3"
            app:layout_constraintTop_toTopOf="@id/cv_iv3"
            app:layout_constraintBottom_toBottomOf="@id/cv_iv3"
            app:layout_constraintRight_toRightOf="@id/cv_iv3" />

        <TextView
            android:id="@+id/name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="颜色"
            android:textColor="#65B1BF"
            android:textSize="40dp"
            app:layout_constraintTop_toBottomOf="@id/cv_iv3"
            app:layout_constraintLeft_toLeftOf="@id/cv_iv3"
            app:layout_constraintRight_toRightOf="@id/cv_iv3"/>

        <ImageView
            android:id="@+id/cv_iv4"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/cv_iv3"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="268dp"
            android:background="@drawable/dew"/>

        <ImageButton
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:id="@+id/cv_ib3"
            android:layout_width="168dp"
            android:layout_height="168dp"
            app:layout_constraintLeft_toLeftOf="@id/cv_iv4"
            app:layout_constraintTop_toTopOf="@id/cv_iv4"
            app:layout_constraintBottom_toBottomOf="@id/cv_iv4"
            app:layout_constraintRight_toRightOf="@id/cv_iv4" />

        <TextView
            android:id="@+id/name3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="玩具"
            android:textColor="#65B1BF"
            android:textSize="40dp"
            app:layout_constraintTop_toBottomOf="@id/cv_iv4"
            app:layout_constraintLeft_toLeftOf="@id/cv_iv4"
            app:layout_constraintRight_toRightOf="@id/cv_iv4"/>

        <ImageButton
            android:id="@+id/enter"
            android:layout_width="228dp"
            android:layout_height="99dp"
            android:background="@drawable/choose_start"
            app:layout_constraintTop_toBottomOf="@id/cv_iv3"
            app:layout_constraintLeft_toLeftOf="@id/name2"
            app:layout_constraintRight_toRightOf="@id/name2"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="35dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
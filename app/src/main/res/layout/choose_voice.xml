<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/choose_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.95"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.9">

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerInside"
            android:background="@drawable/choose_star"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.08"
            app:layout_constraintDimensionRatio="2:3"
            android:layout_marginTop="6dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="语音游戏"
            android:gravity="center"
            android:textColor="@color/white"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeMaxTextSize="60sp"
            android:autoSizeStepGranularity="2sp"
            app:layout_constraintHeight_percent="0.13"
            app:layout_constraintWidth_percent="0.24"
            app:layout_constraintStart_toEndOf="@id/iv1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.03"
            app:layout_constraintVertical_bias="0.05"/>
        <ImageButton
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/choose_cha"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.07"
            app:layout_constraintWidth_percent="0.05"
            app:layout_constraintVertical_bias="0.04"
            app:layout_constraintHorizontal_bias="0.96"
            />

        <ImageView
            android:id="@+id/cv_iv1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/choose_game"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintWidth_percent="0.1"
            app:layout_constraintVertical_bias="0.25"
            app:layout_constraintHorizontal_bias="0.45"
            />

        <TextView
            android:id="@+id/level"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="等级一"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeMaxTextSize="60sp"
            android:autoSizeStepGranularity="2sp"
            android:gravity="center"
            android:textColor="#65B1BF"
            app:layout_constraintBottom_toBottomOf="@id/cv_iv1"
            app:layout_constraintLeft_toRightOf="@id/cv_iv1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/cv_iv1"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintWidth_percent="0.1"
            app:layout_constraintVertical_bias="0.06"
            app:layout_constraintHorizontal_bias="0"
            />

        <ImageView
            android:id="@+id/cv_iv2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.28"
            app:layout_constraintWidth_percent="0.16"
            app:layout_constraintVertical_bias="0.52"
            app:layout_constraintHorizontal_bias="0.22"
            android:background="@drawable/choose_rec"/>
        <ImageButton
            android:id="@+id/cv_ib1"
            android:src="@drawable/choose_didi"
            android:scaleType="centerInside"

            android:layout_width="0dp"
            android:layout_height="0dp"

            app:layout_constraintVertical_bias="0.3"
            app:layout_constraintHorizontal_bias="0"

            app:layout_constraintTop_toTopOf="@id/cv_iv2"
            app:layout_constraintBottom_toBottomOf="@id/cv_iv2"
            app:layout_constraintStart_toStartOf="@id/cv_iv2"
            app:layout_constraintEnd_toEndOf="@id/cv_iv2"
            />
        <TextView
            android:id="@+id/name1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="人物"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeMaxTextSize="60sp"
            android:autoSizeStepGranularity="2sp"
            android:textColor="#65B1BF"
            app:layout_constraintTop_toBottomOf="@id/cv_iv2"
            app:layout_constraintLeft_toLeftOf="@id/cv_iv2"
            app:layout_constraintRight_toRightOf="@id/cv_iv2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintWidth_percent="0.1"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintHorizontal_bias="0.5"/>

        <ImageView
            android:id="@+id/cv_iv3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.28"
            app:layout_constraintWidth_percent="0.16"
            app:layout_constraintVertical_bias="0.52"
            app:layout_constraintHorizontal_bias="0.42"
            android:background="@drawable/choose_rec"/>
        <ImageButton
            android:id="@+id/cv_ib2"
            android:src="@drawable/choose_yellow"
            android:scaleType="centerInside"

            android:layout_width="0dp"
            android:layout_height="0dp"

            app:layout_constraintVertical_bias="0.3"
            app:layout_constraintHorizontal_bias="0"

            app:layout_constraintTop_toTopOf="@id/cv_iv3"
            app:layout_constraintBottom_toBottomOf="@id/cv_iv3"
            app:layout_constraintStart_toStartOf="@id/cv_iv3"
            app:layout_constraintEnd_toEndOf="@id/cv_iv3"
            />
        <TextView
            android:id="@+id/name2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="颜色"
            android:gravity="center"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeMaxTextSize="60sp"
            android:autoSizeStepGranularity="2sp"
            android:textColor="#65B1BF"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintWidth_percent="0.1"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cv_iv3"
            app:layout_constraintLeft_toLeftOf="@id/cv_iv3"
            app:layout_constraintRight_toRightOf="@id/cv_iv3" />

        <ImageView
            android:id="@+id/cv_iv4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.28"
            app:layout_constraintWidth_percent="0.16"
            app:layout_constraintVertical_bias="0.52"
            app:layout_constraintHorizontal_bias="0.62"
            android:background="@drawable/choose_rec"/>

        <ImageButton
            android:id="@+id/cv_ib3"
            android:src="@drawable/choose_muma"
            android:scaleType="centerInside"

            android:layout_width="0dp"
            android:layout_height="0dp"

            app:layout_constraintVertical_bias="0.3"
            app:layout_constraintHorizontal_bias="0"

            app:layout_constraintTop_toTopOf="@id/cv_iv4"
            app:layout_constraintBottom_toBottomOf="@id/cv_iv4"
            app:layout_constraintStart_toStartOf="@id/cv_iv4"
            app:layout_constraintEnd_toEndOf="@id/cv_iv4"
            />

        <TextView
            android:id="@+id/name3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="玩具"
            android:gravity="center"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeMaxTextSize="60sp"
            android:autoSizeStepGranularity="2sp"
            android:textColor="#65B1BF"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintWidth_percent="0.1"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cv_iv4"
            app:layout_constraintLeft_toLeftOf="@id/cv_iv4"
            app:layout_constraintRight_toRightOf="@id/cv_iv4"/>

        <ImageView
            android:id="@+id/cv_iv5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.28"
            app:layout_constraintWidth_percent="0.16"
            app:layout_constraintVertical_bias="0.52"
            app:layout_constraintHorizontal_bias="0.82"
            android:background="@drawable/choose_rec"/>
        <ImageButton
            android:id="@+id/cv_ib4"
            android:src="@drawable/choose_banana"
            android:scaleType="centerInside"

            android:layout_width="0dp"
            android:layout_height="0dp"

            app:layout_constraintVertical_bias="0.3"
            app:layout_constraintHorizontal_bias="0"

            app:layout_constraintTop_toTopOf="@id/cv_iv5"
            app:layout_constraintBottom_toBottomOf="@id/cv_iv5"
            app:layout_constraintStart_toStartOf="@id/cv_iv5"
            app:layout_constraintEnd_toEndOf="@id/cv_iv5" />

        <TextView
            android:id="@id/name4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="食物"
            android:gravity="center"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeMaxTextSize="60sp"
            android:autoSizeStepGranularity="2sp"
            android:textColor="#65B1BF"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintWidth_percent="0.1"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cv_iv5"
            app:layout_constraintLeft_toLeftOf="@id/cv_iv5"
            app:layout_constraintRight_toRightOf="@id/cv_iv5"/>

        <ImageButton
            android:id="@+id/right"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.12"
            app:layout_constraintWidth_percent="0.08"
            app:layout_constraintVertical_bias="0.52"
            app:layout_constraintHorizontal_bias="0.94"
            android:background="@drawable/choose_right"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:id="@+id/left"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.12"
            app:layout_constraintWidth_percent="0.08"
            app:layout_constraintVertical_bias="0.52"
            app:layout_constraintHorizontal_bias="0.1"
            android:background="@drawable/choose_demesion_left"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:id="@+id/enter"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.15"
            app:layout_constraintWidth_percent="0.2"
            app:layout_constraintVertical_bias="0.65"
            app:layout_constraintHorizontal_bias="0.5"
            android:background="@drawable/choose_start"
            app:layout_constraintTop_toBottomOf="@id/cv_iv2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
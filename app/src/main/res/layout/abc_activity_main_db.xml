<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.horsey.ABCViewModel" />

    </data>

    <androidx.drawerlayout.widget.DrawerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ABCMainActivity2"
        android:orientation="vertical"
        tools:openDrawer="end"
        android:id="@+id/drawerLayout"
        tools:ignore="MissingClass"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/title" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.04"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.82">

                <ImageButton
                    android:id="@+id/leftbutton"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/leftarrow"
                    android:scaleType="centerInside"
                    app:layout_constraintWidth_percent="0.25"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintHorizontal_bias="0.15"
                    app:layout_constraintRight_toRightOf="parent"
                    android:background="#FAFAFA"
                    android:onClick="@{()->viewModel.leftClick()}"/>

                <TextView
                    android:id="@+id/number"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="0/57"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="12sp"
                    android:autoSizeMaxTextSize="25sp"
                    android:autoSizeStepGranularity="2sp"
                    app:layout_constraintWidth_percent="0.25"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintRight_toRightOf="parent" />

                <ImageButton
                    android:id="@+id/rightbutton"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/rightarrow"
                    android:background="#FAFAFA"
                    app:layout_constraintWidth_percent="0.25"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintHorizontal_bias="0.85"
                    app:layout_constraintRight_toRightOf="parent"
                    android:onClick="@{()->viewModel.rightClick()}"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth_percent="0.24"
                app:layout_constraintHeight_percent="0.08"
                android:gravity="center"
                android:text="儿童孤独症评定量表"
                android:textColor="#3C85AB"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="12sp"
                android:autoSizeMaxTextSize="30sp"
                android:autoSizeStepGranularity="2sp"
                app:layout_constraintTop_toTopOf="@+id/image"
                app:layout_constraintBottom_toTopOf="@+id/image"
                app:layout_constraintLeft_toLeftOf="@+id/image"
                app:layout_constraintRight_toRightOf="@+id/image"
                app:layout_constraintVertical_bias="0" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                app:layout_constraintHeight_percent="0.45"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintVertical_bias="0.4"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="12sp"
                android:autoSizeMaxTextSize="30sp"
                android:autoSizeStepGranularity="2sp"
                android:text="您的孩子有无以下现象"
                android:textColor="#3C85AB"
                app:layout_constraintHeight_percent="0.07"
                app:layout_constraintWidth_percent="0.25"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintVertical_bias="0.2"
                app:layout_constraintHorizontal_bias="0.65" />

            <TextView
                android:id="@+id/problemtitle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="@{viewModel.getCurProblem().getTitle()}"
                android:textColor="#3C85AB"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="12sp"
                android:autoSizeMaxTextSize="30sp"
                android:autoSizeStepGranularity="2sp"
                app:layout_constraintHeight_percent="0.07"
                app:layout_constraintWidth_percent="0.25"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintHorizontal_bias="0.65"
                app:layout_constraintVertical_bias="0.28" />

            <Button
                android:id="@+id/never"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/OptionNormalColor"
                android:paddingLeft="15dp"
                android:text="@{viewModel.getCurProblem().getOption1()}"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="12sp"
                android:autoSizeMaxTextSize="30sp"
                android:autoSizeStepGranularity="2sp"
                app:layout_constraintWidth_percent="0.35"
                app:layout_constraintHeight_percent="0.08"
                app:layout_constraintTop_toBottomOf="@+id/problemtitle"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.2"
                app:layout_constraintHorizontal_bias="0.75"
                android:onClick="@{()->viewModel.option1Click()}"/>

            <Button
                android:id="@+id/seldom"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/OptionNormalColor"
                android:paddingLeft="15dp"
                android:text="@{viewModel.getCurProblem().getOption2()}"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="12sp"
                android:autoSizeMaxTextSize="30sp"
                android:autoSizeStepGranularity="2sp"
                app:layout_constraintWidth_percent="0.35"
                app:layout_constraintHeight_percent="0.08"
                app:layout_constraintTop_toBottomOf="@+id/never"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.2"
                app:layout_constraintHorizontal_bias="0.75"
                android:onClick="@{()->viewModel.option2Click()}"/>

            <Button
                android:id="@+id/submit"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/grey"
                android:padding="5dp"
                android:text="提交"
                android:textColor="@color/white"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="12sp"
                android:autoSizeMaxTextSize="30sp"
                android:autoSizeStepGranularity="2sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintHeight_percent="0.07"
                app:layout_constraintWidth_percent="0.2"
                app:layout_constraintVertical_bias="0.93"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/drawer"
            android:layout_alignParentRight="true"
            android:layout_width="500dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@color/white">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:autoSizeMaxTextSize="30sp"
                android:autoSizeMinTextSize="12sp"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:text="您的答题情况"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="0.06"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.2"
                app:layout_constraintWidth_percent="0.7" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:autoSizeMaxTextSize="20sp"
                android:autoSizeMinTextSize="12sp"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:text="点击题目序号可跳转到当前页面"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="0.05"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.27"
                app:layout_constraintWidth_percent="0.7">

            </TextView>

            <GridView
                android:id="@+id/grid_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="10dp"
                android:horizontalSpacing="5dp"
                android:numColumns="8"
                android:verticalSpacing="5dp"
                app:layout_constraintBottom_toTopOf="@+id/back"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView9">

            </GridView>


        <Button
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#65B1BF"
            android:text="继续答题"
            android:gravity="center"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeMaxTextSize="25sp"
            android:autoSizeStepGranularity="2sp"
            android:textColor="@color/white"
            app:layout_constraintHeight_percent="0.08"
            app:layout_constraintWidth_percent="0.4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.9" />
            <!--
            <Button
                android:id="@+id/submitnow"
                android:layout_width="210dp"
                android:layout_height="65dp"
                android:layout_marginHorizontal="15dp"
                android:text="立即提交"
                android:textAlignment="center"
                android:textSize="25dp">
            </Button>
            -->

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.drawerlayout.widget.DrawerLayout>
</layout>
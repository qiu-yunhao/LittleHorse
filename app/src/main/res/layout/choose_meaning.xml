<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/choose_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.95"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.9">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerInside"
            android:background="@drawable/choose_star"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.08"
            app:layout_constraintDimensionRatio="2:3"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="语义游戏"
            android:textColor="@color/white"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeMaxTextSize="60sp"
            android:autoSizeStepGranularity="2sp"
            app:layout_constraintHeight_percent="0.13"
            app:layout_constraintWidth_percent="0.24"
            app:layout_constraintStart_toEndOf="@id/imageView2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.03"
            app:layout_constraintVertical_bias="0.05"/>

        <ImageButton
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerInside"
            android:background="@drawable/close"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_percent="0.05"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintVertical_bias="0.02"
            app:layout_constraintHorizontal_bias="0.97"/>

        <ImageView
            android:id="@+id/cv_iv2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_percent="0.17"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintHorizontal_bias="0.2"
            android:background="@drawable/choose_circle"/>

        <ImageButton
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:id="@+id/cv_ib1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintHeight_percent="0.23"
            app:layout_constraintLeft_toLeftOf="@id/cv_iv2"
            app:layout_constraintTop_toTopOf="@id/cv_iv2"
            app:layout_constraintBottom_toBottomOf="@id/cv_iv2"
            app:layout_constraintRight_toRightOf="@id/cv_iv2" />

        <TextView
            android:id="@+id/name1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="人物"
            android:textColor="#65B1BF"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeMaxTextSize="40sp"
            android:autoSizeStepGranularity="2sp"
            android:gravity="center"
            app:layout_constraintWidth_percent="0.13"
            app:layout_constraintHeight_percent="0.08"
            app:layout_constraintVertical_bias="0.05"
            app:layout_constraintTop_toBottomOf="@id/cv_iv2"
            app:layout_constraintLeft_toLeftOf="@id/cv_iv2"
            app:layout_constraintRight_toRightOf="@id/cv_iv2"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/cv_iv3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_percent="0.17"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintHorizontal_bias="0.42"
            android:background="@drawable/choose_circle"/>

        <ImageButton
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:id="@+id/cv_ib2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintHeight_percent="0.23"
            app:layout_constraintLeft_toLeftOf="@id/cv_iv3"
            app:layout_constraintTop_toTopOf="@id/cv_iv3"
            app:layout_constraintBottom_toBottomOf="@id/cv_iv3"
            app:layout_constraintRight_toRightOf="@id/cv_iv3" />

        <TextView
            android:id="@+id/name2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="颜色"
            android:textColor="#65B1BF"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeMaxTextSize="40sp"
            android:autoSizeStepGranularity="2sp"
            android:gravity="center"
            app:layout_constraintWidth_percent="0.13"
            app:layout_constraintHeight_percent="0.08"
            app:layout_constraintVertical_bias="0.05"
            app:layout_constraintTop_toBottomOf="@id/cv_iv3"
            app:layout_constraintLeft_toLeftOf="@id/cv_iv3"
            app:layout_constraintRight_toRightOf="@id/cv_iv3"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/cv_iv4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_percent="0.17"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintHorizontal_bias="0.64"
            android:background="@drawable/choose_circle"/>

        <ImageButton
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:id="@+id/cv_ib3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintHeight_percent="0.23"
            app:layout_constraintLeft_toLeftOf="@id/cv_iv4"
            app:layout_constraintTop_toTopOf="@id/cv_iv4"
            app:layout_constraintBottom_toBottomOf="@id/cv_iv4"
            app:layout_constraintRight_toRightOf="@id/cv_iv4" />

        <TextView
            android:id="@+id/name3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="玩具"
            android:textColor="#65B1BF"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeMaxTextSize="40sp"
            android:autoSizeStepGranularity="2sp"
            android:gravity="center"
            app:layout_constraintWidth_percent="0.13"
            app:layout_constraintHeight_percent="0.08"
            app:layout_constraintVertical_bias="0.05"
            app:layout_constraintTop_toBottomOf="@id/cv_iv4"
            app:layout_constraintLeft_toLeftOf="@id/cv_iv4"
            app:layout_constraintRight_toRightOf="@id/cv_iv4"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/cv_iv5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_percent="0.17"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintHorizontal_bias="0.86"
            android:background="@drawable/choose_circle"/>

        <ImageButton
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:id="@+id/cv_ib4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintHeight_percent="0.23"
            app:layout_constraintLeft_toLeftOf="@id/cv_iv5"
            app:layout_constraintTop_toTopOf="@id/cv_iv5"
            app:layout_constraintBottom_toBottomOf="@id/cv_iv5"
            app:layout_constraintRight_toRightOf="@id/cv_iv5" />

        <TextView
            android:id="@+id/name4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="食物"
            android:textColor="#65B1BF"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeMaxTextSize="40sp"
            android:autoSizeStepGranularity="2sp"
            android:gravity="center"
            app:layout_constraintWidth_percent="0.13"
            app:layout_constraintHeight_percent="0.08"
            app:layout_constraintVertical_bias="0.05"
            app:layout_constraintTop_toBottomOf="@id/cv_iv5"
            app:layout_constraintLeft_toLeftOf="@id/cv_iv5"
            app:layout_constraintRight_toRightOf="@id/cv_iv5"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageButton
            android:id="@+id/enter"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitCenter"
            android:background="@drawable/choose_start"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHeight_percent="0.15"
            app:layout_constraintWidth_percent="0.2"
            app:layout_constraintVertical_bias="0.9"
            app:layout_constraintHorizontal_bias="0.52"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
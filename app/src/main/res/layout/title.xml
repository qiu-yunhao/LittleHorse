<?xml version="1.0" encoding="utf-8"?>
<!-- 自定义标题栏 -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/choose_back"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/back"
        android:scaleType="centerInside"
        android:onClick="back"
        android:background="#66A7C7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintWidth_percent="0.08">
    </ImageButton>

    <TextView
        android:id="@+id/test"
        android:layout_width="0dp"
        android:layout_height="00dp"
        android:text="测评与评估"
        android:fontFamily="sans-serif"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeMaxTextSize="33sp"
        android:autoSizeStepGranularity="2sp"
        android:background="#66A7C7"
        app:layout_constraintLeft_toRightOf="@+id/choose_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.84"
        app:layout_constraintHeight_percent="0.06">
    </TextView>

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/tablehome"
        android:scaleType="centerInside"
        android:onClick="home"
        android:background="#66A7C7"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintWidth_percent="0.08"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/test">
    </ImageButton>


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="button">
        <item name="android:background">@drawable/frame_button</item>
        <item name="android:textColor">@color/game</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">23sp</item>
    </style>
    <style name="whiteText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">38sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="GameText" parent="whiteText">
        <item name="android:textSize">33sp</item>
        <item name="android:textColor">@color/GameColor</item>
    </style>

    <style name="icon">
        <item name="android:background">@drawable/frame_icon</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="join">
        <item name="android:background">@drawable/join</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="button_new">
        <item name="android:background">@drawable/frame_button_new</item>
        <item name="android:textColor">#65B1BF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>
</resources>